            },
            {
              "uid": "be235a3523",
              "wait": {
                "options": [
                  {
                    "show": "pretty okay",
                    "value": "good"
                  },
                  {
                    "show": "not so much",
                    "steps": [
                      {
                        "say": "Oh no, that's too bad!",
                        "uid": "a33b005b01"
                      }
                    ],
                    "uid": "39849ab925",
                    "value": "bad"
                  }
                ],
                "variable": "feeling"
              }
            },
            {
              "switch": {
                "arg": "feeling",
                "cases": [
                  {
                    "match": "bad",
                    "steps": [
                      {
                        "say": "I understand that you're not feeling great",
                        "uid": "ba473ca911"
                      },
                      {
                        "goto": "symptoms",
                        "uid": "d4f24210e9"
                      }
                    ],
                    "uid": "88d6feb76d"
                  },
                  {
                    "default": true,
                    "steps": [
                      {
                        "say": "Okay, so just tell me about your day then",
                        "uid": "840487a7bb"
                      },
                      {
                        "uid": "012d79baa1",
                        "wait": {
                          "long": true,
                          "variable": "notes"
                        }
                      }
                    ],
                    "uid": "0297de1a0d"
                  }
                ]
              },
              "uid": "e2ed2bf074"
            },
            {
              "say": "Thanks, goodbye!",
              "uid": "621b126118"
            }
          ],
          "uid": "397b17614b"
        },
        {
          "name": "symptoms",
          "steps": [
            {
              "say": "Please check all symptoms that apply",
              "uid": "05ddab26df"
            },
            {
              "uid": "bab096844f",
              "wait": {
                "multi": true,
                "options": [
                  {
                    "field": "nausea_stomachache",
                    "show": "nausea or stomachache"
